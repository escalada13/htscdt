<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>


<h1><%= @htscdt.htsus %></h1>

<table>
  <tr class="top_line">
    <td> <%= image_tag(@htscdt.image_url, class: 'list_image') %> </td>
    <td class="list_columns">
      <dl>
        <dt><%= @htscdt.htsus %></dt>
        <dd><%= @htscdt.inv_description %></dd>
        <dd><%= @htscdt.gen_eng_description %></dd>
        <dd><%= @htscdt.gen_esp_description %></dd>
      </dl>
    </td>

    <td class="list_columns">
      <dl>
        <dt><%= @htscdt.author %></dt>
        <dd><%= @htscdt.verified_by %></dd>
        <dd><%= @htscdt.legal_authority %></dd>
        <dd><%= link_to 'Link To Reference', @htscdt.la_link, :target => "_blank"  unless @htscdt.la_link.empty? %></dd>
      </dl>
    </td>

    <td class="list_columns">
      <dl>
        <dt><%= @htscdt.early_triggers %></dt>
        <dd><%= @htscdt.date.to_time.strftime('%B %e %Y') %></dd>
        <dd><%= @htscdt.confidence %></dd>
      </dl>
    </td>
  </tr>

  <tr class="list_line">
    <td></td>
    <td class="list_comments" colspan = "4">
      <dt>COMMENTS<dt>
      <dd><%= sanitize(@htscdt.comments) %></dd>
      <dd><%= link_to 'Other Link References', @htscdt.other_link, :target => "_blank" unless @htscdt.other_link.empty? %></dd>
    </td>
  </td>
</table>



<%= link_to 'Back', catalog_path %>
